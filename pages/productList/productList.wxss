.filtrate-bg{
    position: fixed;
    top: 88rpx;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 100;
    background-color: rgba(0,0,0,0.5);
}
.filtrate-box{
    background-color: #ffffff;
}
.filtrate-tt{
    margin-top: 2rpx;
    line-height: 90rpx;
    font-size: 28rpx;
    color: #3a3a3a;
    padding: 0 46rpx;
}
.filtrate-ipt{
    padding: 0 40rpx;
}
.filtrate-ipt input{
    display: inline-block;
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    background-color: #f2f2f2;
    border-radius: 6rpx;
    font-size: 28rpx;
    color: #3a3a3a;
    vertical-align: middle;
}
.filtrate-list{
    padding: 0 23rpx;
}
.filtrate-list view{
    width: 33.33%;
    float: left;
    padding: 0 17rpx;
    box-sizing: border-box;
}
.filtrate-list view text{
    display: block;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    border: #acabab 2rpx solid;
    margin-bottom: 28rpx;
    border-radius: 6rpx;
    font-size: 26rpx;
    color: #acabab;
}
.filtrate-list view.act text{
    color: #000000;
    border-color: #000000;
    background-color: #f5f5f5;
}
.filtrate-btn{
    margin-top: 32rpx;
}
.filtrate-btn button{
    border-radius: 0;
    width: 50%;
    float: left;
    height: 112rpx;
    line-height: 112rpx;
    font-size: 32rpx;
    color: #000;
    background-color: #f4f4f4;
}
.filtrate-btn button.red{
    color: #fff;
    background-color: #d62626;
}
.filtrate-btn button:after{
    border: none 0;
}