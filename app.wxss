@import './weui.wxss';
@import './fonts/iconfont.wxss';

page{
    height: 100%;
    font-size: 28rpx;
    color: #101010;
    background-color: #FFF;
}

.weui-cells{
    font-size: 32rpx;
    margin-bottom: 20rpx;
}
.weui-vcode-btn{
    font-size: 32rpx;
    width: 168rpx;
    text-align: center;
    color: #3191E8;
}
.weui-btn{
    font-size: 32rpx;
}
.weui-panel__hd{
    font-size: 32rpx;
}

.relation-title .fr{
    color: #3191E8;
}
.loadmore-bg{
    background-color: #ffffff;
    overflow: hidden;
}
.weui-uploader__file{
    border: 1px solid #d9d9d9;
}
.weui-uploader__img{
    width: 77px;
    height: 77px;
}
.uploader-box{
    margin-top: 30rpx;
}
.fr{
    float: right;
}
.fl{
    float: left;
}
.tl{
    text-align: left;
}
.tc{
    text-align: center;
}
.tr{
    text-align: right;
}
.c-red{
    color:#d6000f;
}
.pd32{
    padding: 0 32rpx;
}
.btn-bottom{
    height: 102rpx;
}
.btn-bottom .weui-flex{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 100;
    border-top: #e6e6e6 2rpx solid;
    background-color: #ffffff;
    height: 100rpx;
}
.btn-bottom .weui-flex .iconfont{
    width: 60rpx;
    height: 60rpx;
    background-color: #000000;
    color: #ffffff;
    text-align: center;
    line-height: 60rpx;
    border-radius: 50%;
    margin: 20rpx 26rpx 0 10rpx;
    font-size: 32rpx;
}
.btn-bottom .weui-flex .iconfont.red{
    background-color: #d6000f;
}
.btn-bottom .weui-flex .iconfont:first-child{
    margin-left: 30rpx;
}
.btn-bottom .weui-flex .weui-flex__item{
    align-self: center;
}
.btn-bottom .weui-flex .weui-flex__item button,.btn-bottom .weui-flex .weui-flex__item navigator{
    margin-top: 0;
    background-color: #d6000f;
    border-radius: 0;
    height: 100rpx;
    font-size: 30rpx;
    color: #ffffff;
    line-height: 100rpx;
    text-align: center;
}
.btn-bottom .weui-flex .weui-flex__item button:after{
    border: 0 none;
}
.nextBtn{
    position:relative;
    display:block;
    margin-left:auto;
    margin-right:auto;
    padding-left:14px;
    padding-right:14px;
    box-sizing:border-box;
    text-align:center;
    text-decoration:none;
    line-height:2.55555556;
    border-radius:5px;
    -webkit-tap-highlight-color:transparent;
    overflow:hidden;
    color:#fff;
    background-color:#3191E8;
}
.nextBtn{
    line-height: 3;
}
.img-box{
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom:100%;
}
.img-box image{
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    height: auto;
    width: auto;
}

.text1{
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.text2{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.text3{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
.clearfix:after,.clearfix:before{
    display: table;
    content: '';
    clear: both;
}

.navigator-hover{
    background-color: inherit;
}

.weui-cell_active{
    background-color: transparent;
}
.btn-bottom2{
    height: 102rpx;
}
.btn-bottom2 .weui-flex{
    position: fixed;
    bottom: 0;
    right: 0;
    left: 0;
    z-index: 100;
    background-color: #ffffff;
    border-top: #e6e6e6 2rpx solid;
    height: 100rpx;
}
.btn-bottom2 .weui-flex .weui-cell{
    padding: 25rpx 30rpx;
}
.btn-bottom2 .weui-flex .weui-flex__item{
    text-align: right;
    padding-right: 12rpx;
    padding-top: 9rpx;
}
.btn-bottom2 .weui-flex .weui-flex__item .btn-bottom2-ct1{
    font-size: 28rpx;
    color: #060606;
}
.btn-bottom2 .weui-flex .weui-flex__item .btn-bottom2-ct2{
    font-size: 24rpx;
    color: #8a8a8a;
}
.btn-bottom2 .weui-flex button{
    padding: 0 40rpx;
    border-radius: 0;
    background-color: #d6000f;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 30rpx;
    color: #ffffff;
    min-width: 208rpx;
}
.btn-bottom2 .weui-flex button:after{
    border: none 0;
}

.guessLike{
    margin-top: 20rpx;
    background-color: #ffffff;
}
.guessLike-tt{
    line-height: 90rpx;
    text-align: center;
}
.guessLike-tt i{
    margin-right: 20rpx;
    color: #d6000f;
}
.guessLike-items{
    padding: 0 15rpx 30rpx;
}
.guessLike-item{
    float: left;
    width: 50%;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    padding: 0 15rpx;
    margin-top: 15rpx;
    font-size: 30rpx;
    text-align: center;
}
.guessLike-item image{
    width: 100%;
}
.guessLike-item .red{
    color: #c60000;
}
.guessLike-item .gray{
    font-size: 24rpx;
    color: #8a8a8a;
}

.container{
  height: 100%;
}

/* 弹窗 */
.mask{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 100;
    background-color: rgba(0,0,0,0.5);
}
.prompt{
    background-color: #fff;
    position: fixed;
    left: 75rpx;
    right: 75rpx;
    top: 50%;
    padding: 0 24rpx 48rpx;
    margin-top: -212rpx;
}
.prompt-tt{
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    color: #00a0df;
    border-bottom: #f6f7f7 2rpx solid;
    text-align: center;
    margin-bottom: 48rpx;
}
.prompt-ct .weui-flex{
    margin-top: 30rpx;
    font-size: 28rpx;
    line-height: 75rpx;
}
.prompt-ct input{
    background-color: #f3f3f3;
    padding: 0 20rpx;
    height: 75rpx;
    line-height: 75rpx;
}
.prompt-btn{
    margin-top: 48rpx;
}
.prompt-btn .weui-flex__item{
    padding: 0 24rpx;
}
.prompt-btn button{
    background-color: #fff;
    border-radius: 0;
    font-size: 28rpx;
}